{
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules/*",
    "public/*",
    ".next/*"
  ],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "dom",
      "es2017"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    // "allowJs": true,
    // "checkJs": true,
    "jsx": "preserve",
    "strict": true,
    "moduleResolution": "node",
    "rootDirs": [
      "src"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "skipLibCheck": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  }
}
